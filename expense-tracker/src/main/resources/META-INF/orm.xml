<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd" version="2.0">
    
    <!-- This enables DeltaSpike's AuditEntityListener only for a single entity. 
         This can also be enabled through an annotation on the entity class
         
           @EntityListeners(AuditEntityListener.class)
    --> 
    
    <entity class="org.jboss.examples.deltaspike.expensetracker.model.ExpenseReport">
        <entity-listeners>
            <entity-listener class="org.apache.deltaspike.data.impl.audit.AuditEntityListener"  />
        </entity-listeners>
    </entity>
</entity-mappings>